---
import {serverURL} from './conf.js';

import '../styles/global.css';
---
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>TaskRonaut - Registrieren</title>
</head>

<body>
<script>
    import {sessionId} from './user.js';
    import {clientURL} from './conf.js';

    if (sessionId) {
        window.location.href = `${clientURL}/`;
    }
</script>
<div class="login-register-container">
    <div class="register">
        <a class="close-button"
           hx-post="/"
           hx-trigger="click"
           hx-target="body"
           hx-push-url="/"
        >&#10006</a>
        <h2>Registrieren</h2>

        <form id="registration-form"
              hx-post=`${serverURL}/registration`
              hx-target="#response"
              hx-swap="innerHTML">
            <div class="nameDiv">
                <!-- FIRST NAME -->
                <div class="labelInput">
                    <label for="firstName">Vorname</label>
                    <input type="text"
                           name="firstName"
                           id="firstName"
                           required
                           placeholder="Vorname"
                           minlength="1">
                </div>

                <!-- LAST NAME -->
                <div class="labelInput">
                    <label for="lastName">Nachname</label>
                    <input type="text"
                           name="lastName"
                           id="lastName"
                           required
                           placeholder="Nachname"
                           minlength="1">
                </div>
            </div>
            <hr>

            <!-- EMAIL -->
            <!-- Seite 1: Email eingeben -->
            <div x-data="{ email: '' }">
                <label for="email">Email</label>
                <input type="email"
                       name="email"
                       id="email"
                       x-model="email"
                       @input="localStorage.setItem('userEmail', email)"
                       required
                       placeholder="Geben Sie Ihre E-Mail ein"
                       minlength="1">
                <hr>
            </div>


            <!-- PASSWORD -->
            <label for="password">Passwort</label>
            <input type="password"
                   name="password"
                   id="password"
                   required
                   placeholder="Passwort eingeben"
                   minlength="6"
                   title="6 Zeichen, GroÃŸ-, Kleinbuchstaben und Zeichen">

            <!-- REPEATED PASSWORD -->
            <label for="repeatedPassword">Passwort wiederholen</label>
            <input type="password"
                   name="repeatedPassword"
                   id="repeatedPassword"
                   required
                   placeholder="Passwort wiederholen"
                   title="Passwort wiederholt eingeben"
                   minlength="6">

            <button type="submit">Registrieren</button>
        </form>

        <div id="response" style="padding-top: 10px;"></div>

        <p>Du hast schon einen Account?
            <a hx-push-url="login" hx-get="/login" hx-target="#login-register-container" hx-swap="innerHTML"
               aria-label="Einloggen" class="login-register-button">
                Einloggen
            </a>
        </p>
    </div>
</div>


<script>
    import 'htmx.org';
    import Alpine from 'alpinejs';
    import {forwarding} from './forward.js';

    Alpine.start();

    document.addEventListener('htmx:beforeRequest', function (event) {
        if (event.detail.elt.id === 'registration-form') {
            const email = document.getElementById('email').value;
            localStorage.setItem('userEmail', email);
        }
    });
    document.addEventListener('htmx:afterRequest', forwarding);


</script>
</body>
</html>