---
const {boards} = Astro.props;

import {serverURL} from '../pages/conf.js';
---
<!-- TODO errors handlen, 404, 409 -->

<div class="header">

    <div class="boards-overview" x-data="boardCreation">


        <div class="left">


            <h1>
                <a href="/" style="color: whitesmoke; text-decoration: none ">
                    <i class="fa-brands fa-space-awesome"></i>
                    TaskRonaut
                </a>
            </h1>


            <div x-data="{ open: false }">
                <button class="board-header-buttons" @click="open = !open">
                    Boards <i class="fa-solid fa-caret-down"></i>
                </button>
                <div x-show="open" @click.away="open = false" class="dropdown" x-cloak>
                    <ul>
                        <a hx-post=`/boards`
                           hx-push-url=`/boards`
                           hx-swap="outerHTML"
                           hx-target=`.board-container`
                        >
                            <li class="all-boards-button">
                                Alle Boards
                            </li>
                        </a>
                    </ul>
                    <ul>
                        {boards?.flat().map(board => (<a

                                hx-post=`/boards?boardId=${board.boardID}`
                                hx-push-url=`/boards?boardId=${board.boardID}`
                                hx-swap="outerHTML"
                                hx-target=`.board-container`

                        >
                            <li class="specific-boards-button">{board.boardName}</li>
                        </a>))}
                    </ul>
                </div>
            </div>


            <div class="creation-flow">
                <!-- Header Input -->
                <template x-if="!showHeaderInput">
                    <button @click="showHeaderInput = true" class=" board-header-buttons">
                        <i class="fas fa-plus"></i> Board erstellen
                    </button>
                </template>

                <template x-if="showHeaderInput">
                    <div class="input-group">
                        <input
                                type="text"
                                x-model="boardName"
                                @keyup.enter="createBoard()"
                                placeholder="Board-Name"
                                class="board-input"
                                autofocus
                        />
                        <button @click="createBoard()" class="submit-board-button">
                            Erstellen
                        </button>
                        <button @click="showHeaderInput = false; boardName = ''"
                                class="cancel-btn">
                            Abbrechen
                        </button>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>

<style lang="scss">

  .board-input {
    transition: border 0.3s ease;
    background-color: var(--background);
    color: var(--copy);
    margin-left: 15px;
    font-size: medium;
    cursor: pointer;
    padding: 5px 10px 5px 10px;
    border-radius: 5px;
    border: none;
  }

  .submit-board-button {
    transition: border 0.3s ease;
    background-color: var(--primary-dark);
    color: var(--copy);
    margin-left: 5px;
    font-size: medium;
    cursor: pointer;
    padding: 5px 10px 5px 10px;
    border-radius: 5px;
    border: none;

    &:hover {
      border: none;
      background-color: darken(#003B91FF, 10%);
    }
  }

  .cancel-btn {
    transition: border 0.3s ease;
    background-color: var(--error);
    color: var(--copy);
    margin-left: 5px;
    font-size: medium;
    cursor: pointer;
    padding: 5px 10px 5px 10px;
    border-radius: 5px;
    border: none;

    &:hover {
      border: none;
      background-color: darken(#C40000FF, 10%);
    }
  }

</style>